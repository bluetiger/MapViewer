<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapViewer"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013" x:Class="MapViewer.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="601.554" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="29,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" Text="{Binding PathText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="read" HorizontalAlignment="Left" Margin="303,26,0,0" VerticalAlignment="Top" Width="75" Click="ButtonMapRead"/>
        <Label Content="{Binding Label, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="641,23,10,0" VerticalAlignment="Top"/>
 
        <esri:MapView x:Name="Mapview" Margin="0,51,0,0" WrapAroundMode="EnabledWhenSupported" Map="{Binding Map}"/>
        <TextBox x:Name="AddressText" HorizontalAlignment="Left" Height="23" Margin="398,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" />
        <Button x:Name="ButtonAddress" Content="search" HorizontalAlignment="Left" Margin="672,26,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
